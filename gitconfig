[push]
  default = simple

[core]
  autocrlf = input
  safecrlf = false
  editor = vim

[alias]
  b = branch
  co = checkout
  ci = commit
  st = status
  br = branch
  sp = stash pop
  amend = commit --amend -C HEAD
  reword = commit --amend -m
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  diffc = diff --cached
  g = grep --break --heading -n
  up = log --stat @{u}..HEAD

[credential]
  helper = osxkeychain

[color]
  ui = true
